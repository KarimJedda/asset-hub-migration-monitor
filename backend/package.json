{
  "name": "backend",
  "version": "1.0.0",
  "main": "build/main.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "node build/main.js",
    "dev": "ts-node-dev --respawn src/main.ts",
    "migrate": "drizzle-kit generate:sqlite",
    "push": "drizzle-kit push:sqlite",
    "build:scripts": "rimraf ./build-scripts && tsc -p tsconfig.scripts.json",
    "test:services": "yarn build:scripts && node ./build-scripts/scripts/testServices.js",
    "test:xcmProcessing": "yarn build:scripts && node ./build-scripts/scripts/testBlock.js",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@libsql/client": "^0.15.4",
    "@libsql/sqlite3": "^0.3.1",
    "@polkadot/api": "^16.2.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "app-root-path": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.29.3",
    "express": "^5.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.9.1"
}
